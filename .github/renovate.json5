{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",  
  "extends": ["config:base"],
    "includePaths": [
      "test.yaml"
    ],
    "packageRules": [
        {
          "matchFiles": [
            "test.yaml"
          ],
          "matchUpdateTypes": [
            "major",
            "minor",
            "digest",
            "patch",
            "pin",
            "pinDigest"
          ]
        }
    ],
    "regexManagers": [
        {
          "fileMatch": [
            "test\\.ya?ml$"
          ],
          "matchStrings": [
            "// renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s+go (?<currentValue>.*)"
          ]
        }
      ]
}